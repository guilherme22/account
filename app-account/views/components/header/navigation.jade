        a.brand(href='/')
          img(src='/images/logo.png', height='50', width='158', alt='Road Apps')
        ul.nav()
          li#menu-icon
            a.menu-icon(href='#')
              i.icon-reorder
          li.dropdown
            a.dropdown-toggle.menu-icon(href='#')
              i.icon-user
            ul.user.dropdown-menu
              li
                .container-fluid
                  .row-fluid
                    .span4
                      img.profile(src='/images/flat_icons/support.png', alt='')
                    .span8.details
                      small
                        | Bem-vindo&nbsp;
                        a(href='#') #{context.user.name}

                      ul.unstyled
                        li
                          a(href='#')
                            small
                              i.icon-comments.icon
                              | 12 novos comentarios
                        li
                          a(href='#')
                            small
                              i.icon-calendar.icon
                              | 6 novos eventos
                        li
                          a(href='#')
                            small
                              i.icon-bar-chart.icon
                              | 2 novos relatorios

                  .row-fluid.sales
                    .span12.well
                      .row-fluid
                        .border-right.span6
                          p.text-center
